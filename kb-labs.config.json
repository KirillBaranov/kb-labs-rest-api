{
  "sync": {
    "enabled": true
  },
  "rest": {
    "port": 5050,
    "basePath": "/api/v1",
    "auth": {
      "mode": "none"
    },
    "queue": {
      "driver": "memory"
    },
    "cli": {
      "bin": "pnpm",
      "prefix": ["kb"],
      "timeoutSec": 900
    },
    "storage": {
      "driver": "fs",
      "baseDir": ".kb/rest"
    },
    "plugins": [],
    "mockMode": false,
    "cors": {
      "origins": ["http://localhost:3000"],
      "allowCredentials": true
    },
    "logger": {
      "level": "debug",
      "transport": {
        "targets": [
          {
            "target": "pino/file",
            "level": "debug",
            "options": {
              "destination": ".kb/logs/rest-api.log",
              "mkdir": true
            }
          },
          {
            "target": "pino-pretty",
            "level": "debug",
            "options": {
              "destination": 1,
              "colorize": true,
              "translateTime": "HH:MM:ss",
              "ignore": "pid,hostname"
            }
          }
        ]
      }
    }
  }
}