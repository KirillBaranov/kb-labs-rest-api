{
  "name": "@kb-labs/rest-api-core",
  "version": "0.1.0",
  "description": "Core REST API functionality for KB Labs, including request handling and routing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --passWithNoTests -c ../../vitest.config.ts",
    "test:watch": "vitest --passWithNoTests -c ../../vitest.config.ts"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "@kb-labs/core-bundle": "link:../../../kb-labs-core/packages/bundle",
    "@kb-labs/core-config": "link:../../../kb-labs-core/packages/config"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "vitest": "^3",
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "tsup": "^8",
    "@types/node": "^20.10.0"
  },
  "peerDependencies": {
    "@types/node": "^20.10.0"
  }
}
